<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_sneeze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNEEZE"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOW NOSE"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sneeze"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button_medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE MEDICATION"
        app:layout_constraintTop_toBottomOf="@id/button_nose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>